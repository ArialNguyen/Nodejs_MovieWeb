    <link rel="stylesheet" href="/css/HomePage.css">

    <!-- Danh sach phim hot -->
    <div id="hotMovie">
        <div id="carouselExample" class="carousel slide container" data-ride="carousel">
            <h2 style="color: white; padding: 15px 0px 15px 0px;">Phim {{genreName.name}}</h2>
            <div class="carousel-inner view">
                <div class="carousel-item active">
                    <div class="row">
                        {{#each movies}}
                        {{#with this}}
                        <div class="poster col-3">
                            <img class="image-poster-header" src="{{poster.0.link}}" alt="{{name}}" width="100%" height="350px">
                            <div class="middle">
                                <a href="http://localhost:5000/movie/{{_id}}" type="button" class="btn">
                                    <img src="https://cdn-icons-png.flaticon.com/512/4208/4208490.png" alt="{{name}}" width="80px">
                                </a>
                            </div>
                            <p class="nameMovie">{{name}}</p>
                        </div>
                        {{/with}}
                        {{/each}}
                    </div>
                </div>
            </div>

            {{!-- <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a> --}}
        </div>
    </div>
    {{!-- --------------------------------------------------------------------------------- --}}
    <div class="container">
        <div class="row ">
            {{#each allMovies}}
            {{#with this}}
            {{#eq status "full"}}
                <div class="danh-sach-phim poster col-xl-2 col-lg-3 col-md-3 col-sm-4 col-xs-6">
                    <div class="article">
                        img src="{{poster.0.link}}" alt="{{name}}" width="100%" class="image-poster">
                    </div>
                    <div class="middle">
                        <a href="http://localhost:5000/movie/{{_id}}" type="button" class="btn">
                            <img src="https://cdn-icons-png.flaticon.com/512/4208/4208490.png" alt="{{name}}" width="80px">
                        </a>
                    </div>
                    <p>{{name}}</p>
                </div>
            {{/eq}}
            {{/with}}
            {{/each}}
        </div>
    </div>

    <footer class=" footer flex-shrink-0 py-2 bg-dark text-white">
        <div class="container text-center">
            <p>Copyright &copy HAY Phim</p>
        </div>
    </footer>