    <div class="container">
        <div class="row">
            <div class="col-12 m-auto">
                <ul class="nav nav-tabs mt-4" id="myTab">
                    <li class="nav-item mb-3">
                        <a class="nav-link active tab-link-select" id="film-tab" data-toggle="tab" href="#movie_now" role="tab" aria-controls="film" aria-selected="true" style="background-color: #081B27; color:#FBC316;">PHIM MỚI</a>
                    </li>
                    <li class="nav-item mb-3">
                        <a class="nav-link tab-link-select" id="film-tab" data-toggle="tab" href="#hay_movie" role="tab" aria-controls="film" aria-selected="false" style="background-color:#081B27; color: #FBC316;">PHIM HAY</a>
                    </li>
                    <li class="nav-item mb-3">
                        <a class="nav-link tab-link-select" id="film-tab" data-toggle="tab" href="#movie_commingsoon" role="tab" aria-controls="film" aria-selected="false" style="background-color:#081B27; color: #FBC316;">SẮP RA MẮT</a>
                    </li>
                </ul>
                <br>
                <div class="tab-content" id="myTabContent">
                    <!-- Phim dang chieu -->
                    <div class="tab-pane fade show active" id="movie_now">
                        <div class="phim-moi">
                            <div class="row ">
                                <!-- Danh sach phim dang chieu -->
                                {{#each not_full}}
                                    {{#with this}}
                                        <div class="danh-sach-phim poster col-xl-2 col-lg-3 col-md-3 col-sm-4 col-xs-6">
                                            <div class="article">
                                                <img src="{{poster.0.link}}" alt="{{name}}" width="100%" class="image-poster">
                                            </div>
                                            <div class="middle">
                                                <a href="http://localhost:5000/movie/{{_id}}" type="button" class="btn">
                                                    <img src="https://cdn-icons-png.flaticon.com/512/4208/4208490.png" alt="{{name}}" width="80px">
                                                </a>
                                            </div>
                                            <p>{{name}}</p>
                                        </div>
                                    {{/with}}
                                {{/each}}
                            </div>
                        </div>
                    </div>

                    <!-- Phim da chieu -->
                    <div class="tab-pane fade show" id="hay_movie">
                        <div class="phim-moi">
                            <div class="row ">
                                <!-- Danh sach phim da chieu -->
                                {{#each full}}
                                    {{#with this}}
                                        <div class="danh-sach-phim poster col-xl-2 col-lg-3 col-md-3 col-sm-4 col-xs-6">
                                            <div class="article">
                                                <img src="{{poster.0.link}}" alt="{{name}}" width="100%" class="image-poster">
                                            </div>
                                            <div class="middle">
                                                <a href="http://localhost:5000/movie/{{_id}}" type="button" class="btn">
                                                    <img src="https://cdn-icons-png.flaticon.com/512/4208/4208490.png" alt="{{name}}" width="80px">
                                                </a>
                                            </div>
                                            <p>{{name}}</p>
                                        </div>
                                    {{/with}}
                                {{/each}}
                            </div>
                        </div>
                    </div>

                    <!-- Phim sap chieu -->
                    <div class="tab-pane fade show" id="movie_commingsoon">
                        <div class="phim-sap-chieu">
                            <div class="row" style="height: 300px;">
                                <!-- Danh sach phim sap chieu -->
                                {{#each comming_soon}}
                                    {{#with this}}
                                        <div class="danh-sach-phim poster col-xl-2 col-lg-3 col-md-3 col-sm-4 col-xs-6">
